.main
	padding-top 92px
	padding-bottom 70px
	@extends .in
	clearfix()
	+below(768px)
		padding-top 30px
		padding-bottom 30px
	&__content
		float left
		width ratio-percentage(755,1180)
		+below(950px)
			margin-bottom 40px
			width 100%
			float none
		.text
			p
				margin-bottom 21px
				line-height em(30,14)
				+below(768px)
					margin-bottom 21px
				&:last-child
					margin-bottom 24px

	&__side
		padding-top 7px
		float right
		width ratio-percentage(388,1180)
		+below(950px)
			width 100%
			float none

	&__button
		margin-bottom 35px
	&__pagination
		margin-top 35px
		margin-bottom 35px



.main_inner
	padding-top 116px
	+below(768px)
		padding-top 80px
	.text
		p
			margin-bottom 35px
			&:last-child
				margin-bottom 31px

.article
	margin-bottom 53px
	&__title
		@extends .title
		a
			text-decoration none
			color #39434B
			&:hover
				text-decoration underline
	&__text
		@extends .text
		p
			margin-bottom 20px
			line-height 30px
	&__button
		margin-bottom 30px

