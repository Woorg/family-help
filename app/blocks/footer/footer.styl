.footer
	overflow hidden
	&__top
		padding-top 56px
		padding-bottom 57px
		background-color #f5f9fb
		box-shadow inset 0 3px 0 #ebf2f6
	&__in
		@extends .in
		clearfix()
	&__logo
		float left
		+below(1180px)
			margin-bottom 30px
			float none
	&__menu
		margin-top 12px
		float right
		+below(1180px)
			float none
	&__menu-list
		font-size 0
	&__menu-item
		position relative
		margin-right 45px
		display inline-block
		vertical-align top
		+below(950px)
			margin-bottom 10px
		&:after
			position absolute
			top 50%
			right -24px
			content ""
			width 3px
			height 3px
			background #BBB
		&:last-child
			margin-right 10px
			&:after
				display none
	&__menu-link
		font-size 14px
		color #515a62
		text-decoration none
		text-transform uppercase
		&:hover
			color #1373c5
	&__menu-item_active
		.footer__menu-link
			color #1373c5
	&__bottom
		padding-top 10px
		padding-bottom 9px
		background-color #eef4f7


.copyright
	margin-top 14px
	float left
	font-size 13px
	text-transform uppercase
	color #515a62
	+below(584px)
		margin-bottom 10px
		float none
	&__link
		color #1373c5
		text-decoration none
		&:hover
			text-decoration underline

.social
	float right
	font-size 0
	+below(584px)
		float none
	&__item
		margin-left 13px
		display inline-block
		vertical-align top
		&:first-child
			margin-left 0
	&__link
		position relative
		border 1px solid #d7e0e5
		display block
		width 40px
		height 40px
		border-radius 50%
		&_vk,
		&_fb,
		&_twit,
		&_mail
			&:after
				position absolute
				content ""
				top 50%
				left 50%
		&_vk
			&:after
				margin-top -7px
				margin-left -5px
				sprite($vk_icon)
		&_fb
			&:after
				margin-top -7px
				margin-left -4px
				sprite($fb_icon)
		&_twit
			&:after
				margin-top -8px
				margin-left -7px
				sprite($twit_icon)
		&_mail
			&:after
				margin-top -8px
				margin-left -8px
				sprite($mail_icon)
	&__link
		&:hover
			border 1px solid #1373c5
		&_vk
			&:hover
				&:after
					sprite($vk_icon_hover)
		&_fb
			&:hover
				&:after
					sprite($fb_icon_hover)
		&_twit
			&:hover
				&:after
					sprite($twit_icon_hover)
		&_mail
			&:hover
				&:after
					sprite($mail_icon_hover)

